<h2>{{post.title}}</h2>
<p>{{post.content}}</p>

<h3>Comments</h3>
{{#if post.comments.length}}
<ul>
    {{#each post.comments}}
    <li>{{this}}</li>
    {{/each}}
</ul>
{{else}}
<p>No comments yet.</p>
{{/if}}

<form action="/blog/post/{{post.id}}" method="POST">
    <label for="comment">Add a comment:</label>
    <input type="text" id="comment" name="comment" required>
    <button type="submit">Submit</button>
</form>